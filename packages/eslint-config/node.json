{
  "root": true,
  "env": {
    "node": true
  },
  "ignorePatterns": ["node_modules/", "lib/", "dist/", "build/"],
  "extends": ["airbnb-base", "prettier"],
  "rules": {
    "no-use-before-define": [
      "error",
      {
        "functions": false,
        "classes": true,
        "variables": true
      }
    ]
  }
}
